<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rel"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bharath.home.MainActivity"
    tools:showIn="@layout/activity_main">



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="@android:color/holo_blue_dark"
            android:nestedScrollingEnabled="true"
            android:id="@+id/view0">

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="@color/color_custom_fragment_1"
            android:nestedScrollingEnabled="true"
            android:id="@+id/view1">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="@color/color_primary"
            android:nestedScrollingEnabled="true"
            android:id="@+id/view2">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="@color/color_material_motion"
            android:nestedScrollingEnabled="true"
            android:id="@+id/view3">

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="500dp"
        android:layout_height="1dip"
        android:background="#000000"
        android:id="@+id/linearLayout" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll"
        android:layout_below="@+id/linearLayout">


    </LinearLayout>


</RelativeLayout>
